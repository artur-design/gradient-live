<?xml version="1.0" encoding="utf-8"?>
<manifest
	xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.example.gradient"
	android:versionCode="1"
	android:versionName="1.0">

	<uses-sdk
		android:minSdkVersion="1"
		android:targetSdkVersion="1"/>

	<application
		android:allowBackup="true"
		android:icon="@drawable/my_launcher"
		android:roundIcon="@drawable/my_launcher"
		android:label="@string/app_name"
		android:theme="@style/AppBaseTheme">

		<activity
			android:name="MainActivity">

			<intent-filter>

				<action
					android:name="android.intent.action.MAIN"/>

				<category
					android:name="android.intent.category.LAUNCHER"/>

			</intent-filter>

		</activity>

		<activity
			android:name=".SettingsActivity"
			android:label="Настройки обоев"
			android:theme="@style/Theme.TransparentDialog"
			android:exported="true">

			<intent-filter>

				<action
					android:name="android.service.wallpaper.WALLPAPER_PREFERENCES"/>

			</intent-filter>

		</activity>

		<service
			android:name=".GradientWallpaperService"
			android:permission="android.permission.BIND_WALLPAPER">

			<intent-filter>

				<action
					android:name="android.service.wallpaper.WallpaperService"/>

			</intent-filter>

			<meta-data
				android:name="android.service.wallpaper"
				android:resource="@xml/wallpaper"/>

			<meta-data
				android:name="android.service.wallpaper.settings"
				android:value="com.example.gradient.SettingsActivity"/>

		</service>

	</application>

</manifest>

